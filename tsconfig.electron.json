{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "dist-electron",
    "rootDir": "electron",
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": false
  },
  "include": ["electron/**/*"],
  "exclude": ["node_modules"]
}
