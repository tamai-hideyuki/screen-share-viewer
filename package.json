{
  "name": "screen-share-viewer",
  "version": "1.0.0",
  "description": "A web-based screen sharing viewer with customizable aspect ratios and orientation support",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:server": "node server/robotjs-server.js",
    "dev:electron": "tsc --project tsconfig.electron.json --watch",
    "build": "vite build",
    "build:electron": "tsc --project tsconfig.electron.json && electron-builder",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "start": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "start:electron": "concurrently \"npm run dev\" \"npm run dev:electron\" \"wait-on http://localhost:5173 && npm run electron:dev\""
  },
  "build": {
    "appId": "com.iphone.mirror.controller",
    "productName": "iPhone Mirror Controller",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "robotjs": "^0.6.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^9.2.1",
    "electron": "^33.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.29.0",
    "wait-on": "^9.0.3"
  }
}
